{
  "compilerOptions": {
    "module": "nodenext",
    "target": "ESNext",
    "incremental": true,
    "composite": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": ".",
    "sourceMap": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "lib": ["ESNext"]
  },
  "include": ["src/**/*.ts"]
}
